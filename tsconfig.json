{
    "compilerOptions": {
        "target": "ES2023",
        "module": "ESNext",
        "jsx": "react-native",
        "declaration": true,
        "outDir": "dist",
        "rootDir": "src",
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "allowSyntheticDefaultImports": true,
        "isolatedModules": true,
        "lib": [
            "es2023",
            "dom"
        ],
    },
    "include": [
        "src",
        "**/*.d.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "src/assets",
        "**/*.test.{ts|tsx}",
    ]
}